                                    <% if(orders && orders.length> 0){ %>
                                        <% orders.forEach((order, index)=> { %>
                                            <tr>
                                                <td class="text-center">
                                                    
                                                </td>
                                                <td><a href="/admin/order-management/orderDetailedView/<%= order._id %>"
                                                        class="fw-bold">#<%= order.oId %></a></td>
                                                <td>
