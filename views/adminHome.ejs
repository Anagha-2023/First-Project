        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                function decodeHtmlEntities(text) {
                    var textArea = document.createElement('textarea');
                    textArea.innerHTML = text;
                    return textArea.value;
                }

                const ordersString = '<%= JSON.stringify(monthly) %>';
                const orders = JSON.parse(decodeHtmlEntities(ordersString));
                const ctx = document.getElementById('myChart');
                console.log(orders);

                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['Orders', 'Sales', 'Average Revenue'],
                        datasets: [{
                            data: [orders.totalOrders, orders.averageSales, orders.averageRevenue],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });

                const yearlyString = '<%= JSON.stringify(yearly) %>';
                const yearly = JSON.parse(decodeHtmlEntities(yearlyString));
                const chart = document.getElementById('yearlyChart');

                new Chart(chart, {
                    type: 'bar',
                    data: {
                        labels: ['Orders', 'Users', 'Products'],
                        datasets: [{
                            data: [yearly.count, yearly.users, yearly.totalproducts],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                })

                const dailyString = '<%= JSON.stringify(daily) %>';
                const dailyOrders = JSON.parse(decodeHtmlEntities(dailyString));
                const daily = document.getElementById('dailyChart');

                new Chart(daily, {
                    type: 'bar',
                    data: {
                        labels: ['Orders', 'Users', 'Products'],
                        datasets: [{
                            data: [dailyOrders.count, dailyOrders.users, dailyOrders.totalproducts],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }

                });
                const weeklyString = '<%= JSON.stringify(weekly) %>';
                const weekly = JSON.parse(decodeHtmlEntities(weeklyString));
                const week = document.getElementById('weeklyChart');

                new Chart(week, {
                    type: 'bar',
                    data: {
                        labels: ['Orders', 'Users', 'Products'],
                        datasets: [{
                            data: [weekly.count, weekly.users, weekly.totalproducts],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                })
            });
        </script>

