        // Function to handle OTP resend
        function resendOtp() {
            // Perform an AJAX request to resend the OTP
            fetch('/resend-otp', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({}),
            })

