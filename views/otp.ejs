                    }
                })
                .catch(error => {
                    console.error('Error in fetch:', error);
                });
        }



        // otp
        var timer;
        var Otptimer = document.getElementById('timer');
        var resendTimer = document.getElementById('resendOtp');

        function Otpstarttimer(minute, sec) {
            clearInterval(timer)
            timer = setInterval(() => {
                Otptimer.innerHTML = formatTime(minute) + ':' + formatTime(sec);
                if (minute == 0 && sec == 0) {
                    clearInterval(timer);
                } else {
                    if (sec == 0) {
                        minute--;
                        sec = 59;
                    } else {
                        sec--;
                    }
                }
            }, 1000)
        };
        function formatTime(time) {
            return time < 10 ? '0' + time : time;
        }
        Otpstarttimer(3, 0);

        resendTimer.addEventListener('click', function () {
            Otpstarttimer(3, 0);
        })
    </script>
